{
  "name": "raleskip-portfolio",
  "version": "1.0.0",
  "description": "Aayush Pawar - Digital Marketing Expert & AI Innovation Leader Portfolio",
  "author": "Aayush Pawar <contact@raleskip.com>",
  "license": "MIT",
  "homepage": "https://www.raleskip.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/raleskip/portfolio.git"
  },
  "keywords": [
    "portfolio",
    "digital-marketing",
    "ai-specialist",
    "react",
    "typescript",
    "tailwind",
    "neumorphism",
    "pwa",
    "raleskip"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:production": "NODE_ENV=production tsc && vite build --mode production",
    "build:preview": "NODE_ENV=staging tsc && vite build --mode staging",
    "build:staging": "NODE_ENV=staging tsc && vite build --mode staging",
    "preview": "vite preview",
    "preview:production": "vite preview --mode production",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "build:report": "npm run build && npx webpack-bundle-analyzer dist/assets/*.js",
    "test": "echo 'No tests specified' && exit 0",
    "clean": "rm -rf dist",
    "clean:cache": "rm -rf node_modules/.vite",
    "prebuild": "npm run clean",
    "postbuild": "npm run size-check",
    "size-check": "npx bundlesize",
    "lighthouse": "npx lighthouse https://www.raleskip.com --output=html --output-path=./lighthouse-report.html",
    "performance": "npm run build && npm run lighthouse",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:preview": "netlify deploy --dir=dist",
    "sitemap:generate": "node scripts/generate-sitemap.js",
    "icons:generate": "node scripts/generate-icons.js",
    "precommit": "npm run lint && npm run type-check",
    "prepare": "npm run build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "motion": "^1.0.0",
    "sonner": "^2.0.3",
    "lucide-react": "^0.460.0",
    "recharts": "^2.12.7",
    "react-hook-form": "^7.55.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "@tailwindcss/forms": "^0.5.7",
    "tailwindcss": "^4.0.0-alpha.25",
    "autoprefixer": "^10.4.19",
    "vite-plugin-pwa": "^0.20.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "compression": "^1.7.4",
    "terser": "^5.31.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/assets/*.js",
      "maxSize": "500kb"
    },
    {
      "path": "./dist/assets/*.css",
      "maxSize": "100kb"
    }
  ],
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}